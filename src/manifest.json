{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "0.5+",
  "author": "AE Creations",

  "browser_specific_settings": {
    "gecko": {
      "id": "readnext@aecreations.github.io",
      "strict_min_version": "91.0"
    }
  },

  "icons": {
    "48": "img/icon.png",
    "96": "img/icon.png"
  },

  "permissions": [
    "alarms",
    "identity",
    "menus",
    "nativeMessaging",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  
  "background": {
    "scripts": [
      "lib/dexie.min.js",
      "lib/md5.js",
      "scripts/aeConst.js",
      "scripts/aePrefs.js",
      "scripts/aeBookmark.js",
      "scripts/aeReadingList.js",
      "scripts/aeSyncReadingList.js",
      "scripts/aeOAuthClient.js",
      "scripts/aeAbstractFileHost.js",
      "scripts/aeDropbox.js",
      "scripts/aeOneDrive.js",
      "scripts/aeGoogleDrive.js",
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "16": "img/icon32.png",
      "32": "img/icon32.png"
    },
    "default_title": "__MSG_extName__"
  },

  "page_action": {
    "default_icon": {
      "16": "img/bookmark.svg",
      "32": "img/bookmark.svg"
    },
    "default_title": "add to readnext"
  },

  "sidebar_action": {
    "default_title": "__MSG_extName__",
    "default_panel": "pages/sidebar.html",
    "default_icon": "img/icon.png"
  },
  
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true,
    "browser_style": true
},

"default_locale": "en"
}
